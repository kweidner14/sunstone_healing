<% include ../partials/navbar.ejs %>


<div class="post-new">
    <h1>New Post!</h1>

    <form action="/posts" method="POST" enctype="multipart/form-data">
        <div class="post-new__title"><input type="text" name="post[title]" placeholder="Title" required></div>
        <div class="post-new__desc"><input type="text" name="post[description]" placeholder="Description" required></div>
        <div class="post-new__img">
            <label for="images" class="post-new__img--label">Image Upload</label>
            <input type="file" accept="images/*" name="images" id="images" required />
        </div>

        <div class="input-area">
            <textarea name="post[body]" id="editor" placeholder="Body"></textarea>
        </div>

        <script>
          CKEDITOR.replace('editor')
        </script>


        <input type="submit" id="submit" class="post-new__button" value="Submit Post">
    </form>
</div>


